@using DeliveryDeck_Backend_Final.Common.Enumerations;
@{
    ViewData["Title"] = "Create user";
}

<div class="restaurant-form">
</div>

<div class="user-form">
    <form class="border border-1 py-3 px-5 bg-white" asp-controller="User" asp-action="Create" method="post">
        <div class="row mb-3">
            <h2 class="col display-5 text-black">Register new user</h2>
        </div>


        <div class="form-group row">
            <div class="col">
                <label for="Name" class="col fs-5">Name</label>
                <input class="w-75 ms-3" type="text" id="name" name="Name" />
            </div>
        </div>

        <div class="form-group row my-3">
            <div class="col">
                <label for="email" class="col fs-5">E-mail</label>
                <input class="ms-3 w-75" type="email" id="email" name="Email" />
            </div>
        </div>

        <div class="form-group row my-3">
            <div class="col">
                <label for="birthdate" class="col fs-5">Date of birth</label>
                <input class="ms-3" type="date" id="birthdate" name="BirthDate" />
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <label class="fs-5">Sex</label>
                <div class="form-check form-check-inline ms-3">
                    <input class="form-check-input" type="radio" name="Gender" value="@Gender.Male" id="genderRadioMale" />
                    <label class="form-check-label" for="genderRadioMale">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Gender" value="@Gender.Female" id="genderRadioFemale" />
                    <label class="form-check-label" for="genderRadioFemale">Female</label>
                </div>
            </div>
        </div>

        <div class="form-group row my-3">
            <div class="col">
                <label class="col fs-5">Roles</label>
                <div class="form-check form-check-inline ms-3">
                    <input class="form-check-input" type="checkbox" name="Roles" value="@RoleType.Customer" id="roleCustomerCheck" />
                    <label class="form-check-label" for="roleCustomer">Customer</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="Roles" value="@RoleType.Courier" id="roleCourierCheck" />
                    <label class="form-check-label" for="roleCourier">Courier</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="Roles" value="@RoleType.Cook" id="roleCookCheck" />
                    <label class="form-check-label" for="roleCook">Cook</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="Roles" value="@RoleType.Manager" id="roleManagerCheck" />
                    <label class="form-check-label" for="roleManager">Manager</label>
                </div>
            </div>
        </div>

        <div class="form-group row my-3" id="addressField">
            <div class="col">
                <label for="Address" class="col fs-5">Address</label>
                <input class="ms-3" type="text" id="Address" name="Address" />
            </div>
        </div>

        <div class="form-group row my-3" id="managerField">
            <div class="col justify-content-center">
                <label for="RestaurantAsManager" class="col fs-5">Manager in</label>
                <button class="btn btn-secondary ms-3 choose-restaurant" type="button" >Choose restaurant</button>
            </div>
        </div>

        <div class="form-group row my-3" id="cookField">
            <div class="col">
                <label for="RestaurantAsCook" class="col fs-5">Cook in</label>
                <button class="btn btn-secondary ms-3 choose-restaurant" type="button">Choose restaurant</button>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $("#addressField").hide();
        $("#managerField").hide();
        $("#cookField").hide();

        $('#roleCustomerCheck').change(function () {
            if (this.checked) {
                $("#addressField").show();
                return;
            }

            $("#addressField").hide();
        });

        $('#roleManagerCheck').change(function () {
            if (this.checked) {
                $("#managerField").show();
                return;
            }

            $("#managerField").hide();
        });

        $('#roleCookCheck').change(function () {
            if (this.checked) {
                $("#cookField").show();
                return;
            }

            $("#cookField").hide();
        });

        $('.choose-restaurant').on('click', function() {
            $.ajax({
                url: "@Html.Raw(Url.Action("RestaurantsPage", "Restaurant"))",
                type: 'GET',
                async: true
            })
                .done(function(result) {
                    $('.restaurant-form').html(result);
                })
        })

    </script>
}