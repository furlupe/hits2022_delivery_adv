@model RestaurantListModel
<div class="container">
    @{
        foreach (var restaurant in Model.Restaurants)
        {
            <div class="container card card-body my-2" id="@restaurant.Id">
                <div class="row">
                    <div class="col-10 d-flex" id="restaurantName">
                        <p class="fs-5 my-auto">@restaurant.Name</p>
                    </div>
                    @await Html.PartialAsync("~/Views/Shared/Partial/CardCRUDElements.cshtml", new CardCRUDElementsModel {Id = restaurant.Id, Controller="Restaurant"})
                </div>
            </div>
        }
    }
</div>