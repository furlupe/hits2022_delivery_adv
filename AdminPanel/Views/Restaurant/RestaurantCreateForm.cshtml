@model RestaurantCreateModel
<form class="border border-1 py-3 px-5 bg-white" asp-controller="Restaurant" asp-action="CreateRestaurant" method="post">
    <div class="modal-body">
        <div class="form-group row">
            <div class="col">
                <label asp-for="Name" class="col">Name</label>
                <input type="text" id="name" asp-for="Name"/>
                <p><span asp-validation-for="Name" class="text-danger"></span></p>
            </div>
        </div>
    </div>
    <div class="row mt-3 modal-footer">
        <div class="col">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
