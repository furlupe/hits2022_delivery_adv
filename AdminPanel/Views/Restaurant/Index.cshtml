@model RestaurantListModel
@{
    ViewData["Title"] = "Restaurants";
}

<link rel="stylesheet" href="~/css/restaurant.css"/>
<div class="restaurant-form">
    <form class="border border-1 py-3 px-5 bg-white" asp-controller="Restaurant" asp-action="CreateRestaurant" method="post">
        <div class="row">
            <h2 class="col display-4 text-black">Add restaurant</h2>
            <div class="col d-flex justify-content-end">
                <button type="button" class="btn btn-close my-auto" onclick="closeRestaurantCreationForm()"></button>
            </div>
        </div>
        <div class="row">
            <label for="name" class="col">Name</label>
        </div>
        <div class="form-group row">
            <div class="col">
                <input type="text" id="name" name="Name" placeholder="Name..."/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">
        @await Html.PartialAsync("~/Views/Shared/Partial/SearchByName.cshtml", new SearchFieldModel {Controller = "Restaurant"})
        <div class="col d-flex justify-content-end">
            <a class="btn btn-outline-success" onclick="showRestaurantCreationForm()">+ Add restaurant</a>
        </div>
    </div>
    <div id="restaurantsList">

    </div>
</div>
@await Html.PartialAsync("~/Views/Shared/Partial/PaginationAjax.cshtml", new PaginationModel { PageInfo = Model.PageInfo })

@section Scripts {
    <script src="~/js/pagination.js"></script>
    <script>
        showRestaurantCreationForm = () => {
            $(".restaurant-form").addClass("active-form");
            $(".restaurant-form #name").focus();
        }
        closeRestaurantCreationForm = () => $(".restaurant-form").removeClass("active-form");

        $(".page-link").on("click", function() {
            var url = "";
            var url = "@Html.Raw(
                (ViewBag.Name is not null) ?
                    Url.Action("RestaurantsPage", "Restaurant", new { page = "__page__", name = "__name__"})
                    : Url.Action("RestaurantsPage", "Restaurant", new { page = "__page__"})
            )";

            url = url.replace("__page__", $(this).val());
            url = url.replace("__name__", "@ViewBag.Name");
            getPage(url)
                .then(result => $("#restaurantsList").html(result));
        });

        $(".page-link").first().click();

    </script>
}