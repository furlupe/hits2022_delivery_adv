@model DeliveryDeck_Backend_Final.Common.DTO.Backend.PagedRestaurantsDto
@{
    ViewData["Title"] = "Restaurants";
}

<link rel="stylesheet" href="~/css/restaurant.css"/>
<div class="restaurant-form">
    <form class="border border-1 py-3 px-5 bg-white" asp-controller="Restaurant" asp-action="CreateRestaurant" method="post">
        <div class="row">
            <h2 class="col display-4 text-black">Add restaurant</h2>
            <div class="col d-flex justify-content-end">
                <button type="button" class="btn btn-close my-auto" onclick="closeRestaurantCreationForm()"></button>
            </div>
        </div>
        <div class="row">
            <label for="name" class="col">Name</label>
        </div>
        <div class="form-group row">
            <div class="col">
                <input type="text" id="name" name="Name"/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-end">
            <a class="btn btn-success" onclick="showRestaurantCreationForm()">+ Add restaurant</a>
        </div>
    </div>
    @{
        foreach(var restaurant in Model.Restaurants)
        {
            <div class="container card card-body my-2">
                <div class="row">
                    <div class="col d-flex">
                        <p class="fs-5 my-auto">@restaurant.Name</p>
                    </div>
                    <div class="col d-flex justify-content-end">
                        <a class="fs-5 btn btn-outline-secondary mx-1">M</a>
                        <a class="fs-5 btn btn-outline-warning mx-1">U</a>
                        <a class="fs-5 btn btn-outline-danger mx-1">D</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
<script>
    showRestaurantCreationForm = () => $(".restaurant-form").addClass("active-form");
    closeRestaurantCreationForm = () => $(".restaurant-form").removeClass("active-form");
</script>