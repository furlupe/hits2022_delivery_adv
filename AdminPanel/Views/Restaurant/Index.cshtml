@model RestaurantListModel
@{
    ViewData["Title"] = "Restaurants";
}

<link rel="stylesheet" href="~/css/restaurant.css"/>
<div class="restaurant-form">
    <form class="border border-1 py-3 px-5 bg-white" asp-controller="Restaurant" asp-action="CreateRestaurant" method="post">
        <div class="row">
            <h2 class="col display-4 text-black">Add restaurant</h2>
            <div class="col d-flex justify-content-end">
                <button type="button" class="btn btn-close my-auto" onclick="closeRestaurantCreationForm()"></button>
            </div>
        </div>
        <div class="row">
            <label for="name" class="col">Name</label>
        </div>
        <div class="form-group row">
            <div class="col">
                <input type="text" id="name" name="Name" placeholder="Name..."/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-start">
            <form asp-controller="Restaurant" asp-action="Index" method="get">
                <input type="text" class="me-2" placeholder="Search by name..." id="search_name" value="@(ViewBag.Name)" name="name"/>
                <button class="btn btn-primary me-2" type="submit">Go</button>
            </form>
        </div>
        <div class="col d-flex justify-content-end">
            <a class="btn btn-success" onclick="showRestaurantCreationForm()">+ Add restaurant</a>
        </div>
    </div>
    @{
        foreach(var restaurant in Model.Restaurants)
        {
            <div class="container card card-body my-2" id="@restaurant.Id">
                <div class="row">
                    <div class="col-10 d-flex" id="restaurantName">
                        <p class="fs-5 my-auto">@restaurant.Name</p>
                    </div>
                    <div class="col d-flex justify-content-end">
                        <form asp-controller="Restaurant" asp-action="Delete" asp-route-id="@restaurant.Id" method="post">
                            <button type="submit" class="btn btn-outline-danger mx-2">D</button>
                        </form>
                        <form asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurant.Id" method="get">
                            <button type="submit" class="btn btn-outline-secondary mx-2">Details</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>
@await Html.PartialAsync("~/Views/Shared/Partial/Pagination.cshtml", new PaginationModel { PageInfo = Model.PageInfo, Controller = "Restaurant" });

<script>
    showRestaurantCreationForm = () => {
        $(".restaurant-form").addClass("active-form");
        $(".restaurant-form #name").focus();
    }
    closeRestaurantCreationForm = () => $(".restaurant-form").removeClass("active-form");
</script>