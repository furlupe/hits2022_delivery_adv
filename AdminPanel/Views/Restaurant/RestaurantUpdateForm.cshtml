@model RestaurantUpdateModel
<form class="p-3" asp-controller="Restaurant" asp-action="Update" asp-route-id="@Model.Id">
    <div class="modal-body">
        <div class="form-group row">
            <div class="col">
                <label asp-for="Name" class="col fs-5">Name</label>
                <input class="w-75 ms-3" type="text" id="name" asp-for="Name" value="@Model.Name" />
                <p><span asp-validation-for="Name" class="text-danger"></span></p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="row mt-2">
            <div class="col justify-content-center">
                <button type="submit" class="btn btn-outline-success">Save</button>
            </div>
        </div>
    </div>
</form>